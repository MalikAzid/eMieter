@model tblHouse
<div class="modal fade" id="AddEditHouse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Resource.Add_Edit_House</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/" method="post" id="frmHouseSubmit">
                    <input type="hidden" id="hdfHouseId" asp-for="Id" />
                    <input type="hidden" id="hdfHouseScreen" name="Screen" />
                    <div class="form-group">
                        <span>@Resource.Category</span>
                        <input type="text" class="form-control" id="txtCategory" asp-for="Category" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span>@Resource.Street</span>
                        <input type="text" class="form-control" id="txtStreet" asp-for="Street" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span>@Resource.PostCode</span>
                        <input type="text" class="form-control" id="txtPostCode" asp-for="PostCode" />
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span>@Resource.City</span>
                        <input type="text" class="form-control" id="txtCity" asp-for="City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-whitesmoke br">
                <button type="button" class="btn btn-primary" id="btnAddEditHouse">@Resource.Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resource.Close</button>
            </div>
        </div>
    </div>
</div>
